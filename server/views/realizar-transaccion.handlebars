<div class="sidebar-transacciones">
  <P class="side-list-title">MI PERFIL</P>
  <a href="/perfil"> <button class="side-list"> PERFIL </button> </a>
  <a href="/transacciones">
    <button class="side-list"> HISTORIAL DE TRANSFERENCIAS </button>
  </a>
  <a href="/deposito"> <button class="side-list"> TRANSACCIONES </button> </a>
  {{#if isLoggedIn}}
  <form action="/logout" method="post" style="margin-top: auto;">
    <button class="side-list logout-button" type="submit">CERRAR SESIÓN</button>
  </form>
  {{/if}}
</div>

<div class="transacciones-page-container">
  <div class="page-header">
    <h1 class="page-title">Gestión de Saldo</h1>
    <div class="saldo-display">
      <span class="saldo-label">Saldo Actual:</span>
      <span class="saldo-amount">${{saldo}}</span>
    </div>
  </div>

  <div class="cards-grid">
    <!-- Depositar Card -->
    <div class="transaction-card">
      <h2 class="card-title">Depositar Dinero</h2>
      <form class="transaction-form" method="post" action="/deposito">
        <div class="form-group">
          <label for="deposito">Monto a Depositar</label>
          <div class="input-wrapper">
            <span class="currency-symbol">$</span>
            <input id="deposito" name="monto" type="number" min="1" step="1" placeholder="0.00" required />
          </div>
        </div>
        <button type="submit" class="submit-btn deposit-btn">
          <span>Depositar</span>
          <span class="btn-icon">→</span>
        </button>
        {{#if depositoError}}
          <div class="alert alert-error">
            {{depositoError}}
          </div>
        {{/if}}
        {{#if depositoSuccess}}
          <div class="alert alert-success">
            {{depositoSuccess}}
          </div>
        {{/if}}
      </form>
    </div>

    <!-- Retirar Card -->
    <div class="transaction-card">
      <h2 class="card-title">Retirar Dinero</h2>
      <form class="transaction-form" method="post" action="/retiro">
        <div class="form-group">
          <label for="retiro">Monto a Retirar</label>
          <div class="input-wrapper">
            <span class="currency-symbol">$</span>
            <input id="retiro" name="monto" type="number" min="1" step="1" placeholder="0.00" required />
          </div>
        </div>
        <button type="submit" class="submit-btn withdraw-btn">
          <span>Retirar</span>
          <span class="btn-icon">→</span>
        </button>
        {{#if retiroError}}
          <div class="alert alert-error">
            {{retiroError}}
          </div>
        {{/if}}
        {{#if retiroSuccess}}
          <div class="alert alert-success">
            {{retiroSuccess}}
          </div>
        {{/if}}
      </form>
    </div>
  </div>
</div>