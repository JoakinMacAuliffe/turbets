<!-- server/views/index.handlebars -->

<!-- Hero Section -->
<div class="fondo">
  <div class="hero-content">
    <div class="hero-badge">
      <span class="material-symbols-outlined">casino</span>
      <span>Casino Online</span>
    </div>
    <h1 class="hero-title">
      Bienvenido a<br/>
      <span class="gradient-text">TURBETS</span>
    </h1>
    <p class="hero-subtitle">
      Experimenta la emoción de la ruleta europea desde la comodidad de tu hogar
    </p>
    <div class="hero-buttons">
      {{#if isLoggedIn}}
        <a href="/perfil" class="btn-primary">
          <span>Ir a Mi Perfil</span>
          <span class="material-symbols-outlined">arrow_forward</span>
        </a>
      {{else}}
        <a href="/registro" class="btn-primary">
          <span>Comenzar Ahora</span>
          <span class="material-symbols-outlined">arrow_forward</span>
        </a>
      {{/if}}
      <a href="/info-app" class="btn-secondary">
        <span class="material-symbols-outlined">info</span>
        <span>Más Información</span>
      </a>
    </div>
    <div class="hero-stats">
      <div class="stat-item">
        <span class="stat-number">37</span>
        <span class="stat-label">Números</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">15</span>
        <span class="stat-label">Tipos de Apuesta</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">35:1</span>
        <span class="stat-label">Pago Máximo</span>
      </div>
    </div>
  </div>
</div>

<!-- Features Section -->
