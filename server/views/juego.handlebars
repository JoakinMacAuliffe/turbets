<div class="game-page-container">
  <!-- Header Controls -->
  <div class="game-header-controls">
    <div class="game-info-badge">
      <span class="badge-label">Saldo</span>
      <span class="badge-value">${{saldo}}</span>
    </div>
    
    <div class="bet-amount-header">
      <label for="bet-amount" class="bet-label-header">Monto</label>
      <div class="bet-input-wrapper-header">
        <span class="currency-symbol">$</span>
        <input
          type="number"
          id="bet-amount"
          class="bet-input-header"
          placeholder="0"
          min="1"
          step="1"
          value="100"
        />
      </div>
      <div class="quick-bet-buttons-header">
        <button class="quick-bet-btn-header" data-amount="100">+100</button>
        <button class="quick-bet-btn-header" data-amount="500">+500</button>
        <button class="quick-bet-btn-header" data-amount="1000">+1K</button>
        <button class="quick-bet-btn-header" data-amount="5000">+5K</button>
      </div>
    </div>
    
    <button class="spin-button">Girar Ruleta</button>
  </div>

  <!-- Content Wrapper -->
  <div class="game-content-wrapper">
    <!-- Sidebar de Estadísticas -->
    <div class="game-sidebar">
      <div class="stat-card">
        <h3 class="stat-title">Estado de Juego</h3>
        <div class="stat-status active">Recibiendo Apuestas</div>
      </div>

      <div class="stat-card">
        <h3 class="stat-title">Últimos 5 Números</h3>
        <ul class="stat-list">
          <!-- <li class="stat-item red">27 <span class="color-label">Rojo</span></li> -->
        </ul>
      </div>

      <div class="stat-card">
        <h3 class="stat-title">Últimas 5 Apuestas</h3>
        <ul class="stat-list">
          <!-- <li class="bet-item loss">Rojo - $100.000 <span class="bet-result">Derrota</span></li> -->
        </ul>
      </div>
    </div>

    <!-- Betting Controls in Left Sidebar -->
    <div class="betting-controls-wrapper">
      <!-- Tipo de Apuesta -->
      <div class="bet-type-selector">
        <h4>Tipo de Apuesta</h4>
        <div class="bet-type-buttons">
          <button
            class="bet-type-btn active"
            data-type="pleno"
            data-label="Pleno"
            data-pago="35"
          >
            Pleno - 1 número (35:1)
          </button>
          <button class="bet-type-btn" data-type="rojo" data-label="Rojo" data-pago="1">
            Rojo - 18 números (1:1)
          </button>
          <button class="bet-type-btn" data-type="negro" data-label="Negro" data-pago="1">
            Negro - 18 números (1:1)
          </button>
          <button class="bet-type-btn" data-type="par" data-label="Par" data-pago="1">
            Par - 18 números (1:1)
          </button>
          <button class="bet-type-btn" data-type="impar" data-label="Impar" data-pago="1">
            Impar - 18 números (1:1)
          </button>
          <button class="bet-type-btn" data-type="falta" data-label="Falta" data-pago="1">
            Falta (1-18) - 18 números (1:1)
          </button>
          <button class="bet-type-btn" data-type="pasa" data-label="Pasa" data-pago="1">
            Pasa (19-36) - 18 números (1:1)
          </button>
          <button class="bet-type-btn" data-type="docena" data-label="Docena" data-pago="2">
            Docena - 12 números (2:1)
          </button>
          <button class="bet-type-btn" data-type="columna" data-label="Columna" data-pago="2">
            Columna - 12 números (2:1)
          </button>
        </div>

        <div id="numero-input" class="numero-selector">
          <label>Seleccionar Número (0-36)</label>
          <input
            type="number"
            id="numero-apuesta"
            min="0"
            max="36"
            value="0"
          />
        </div>

        <div id="docena-input" class="numero-selector" style="display: none;">
          <label>Seleccionar Docena</label>
          <select id="docena-apuesta">
            <option value="1">Primera Docena (1-12)</option>
            <option value="2">Segunda Docena (13-24)</option>
            <option value="3">Tercera Docena (25-36)</option>
          </select>
        </div>

        <div id="columna-input" class="numero-selector" style="display: none;">
          <label>Seleccionar Columna</label>
          <select id="columna-apuesta">
            <option value="1">Primera Columna (3,6,9...)</option>
            <option value="2">Segunda Columna (2,5,8...)</option>
            <option value="3">Tercera Columna (1,4,7...)</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Contenedor Principal del Juego -->
    <div class="game-main-container">
      <div class="roulette-wrap">
        <div class="pointer" aria-hidden="true"></div>
        <div
          id="wheel"
          class="wheel"
          role="img"
          aria-label="Ruleta europea"
        >
          <img src="/images/ruleta.png" class="wheel-overlay" alt="Ruleta overlay" />
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Pasar datos del servidor al script
  window.ultimosNumerosData = {{{ultimosNumeros}}};
  window.ultimasApuestasData = {{{ultimasApuestas}}};
</script>

<script src="/js/ruleta.js"></script>