<div class="game-page-container">
  <!-- Header Controls -->
  <div class="game-header-controls">
    <div class="game-info-badge">
      <span class="badge-label">Saldo</span>
      <span class="badge-value">${{saldo}}</span>
    </div>
    
    <div class="bet-amount-header">
      <label for="bet-amount" class="bet-label-header">Monto</label>
      <div class="bet-input-wrapper-header">
        <input
          type="number"
          id="bet-amount"
          class="bet-input-header"
          placeholder="0"
          min="1"
          step="1"
          value="100"
        />
      </div>
      <div class="quick-bet-buttons-header">
        <button class="quick-bet-btn-header" data-amount="100">+100</button>
        <button class="quick-bet-btn-header" data-amount="500">+500</button>
        <button class="quick-bet-btn-header" data-amount="1000">+1K</button>
        <button class="quick-bet-btn-header" data-amount="5000">+5K</button>
      </div>
    </div>
    
    <button class="spin-button">Girar Ruleta</button>
  </div>

  <!-- Content Wrapper -->
  <div class="game-content-wrapper">
    <!-- Sidebar de Estadísticas -->
    <div class="game-sidebar">
      <div class="stat-card">
        <h3 class="stat-title">Estado de Juego</h3>
        <div class="stat-status active">Recibiendo Apuestas</div>
      </div>

      <div class="stat-card">
        <h3 class="stat-title">Últimos 5 Números</h3>
        <ul class="stat-list">
          <!-- <li class="stat-item red">27 <span class="color-label">Rojo</span></li> -->
        </ul>
      </div>

      <div class="stat-card">
        <h3 class="stat-title">Últimas 5 Apuestas</h3>
        <ul class="stat-list">
          <!-- <li class="bet-item loss">Rojo - $100.000 <span class="bet-result">Derrota</span></li> -->
        </ul>
      </div>
    </div>

    <!-- Betting Controls in Left Sidebar -->
    <div class="betting-controls-wrapper">
      <!-- Tipo de Apuesta -->
      <div class="bet-type-selector">
        <h4>Tipo de Apuesta</h4>
        <div class="bet-type-buttons">
          <button
            class="bet-type-btn active"
            data-type="pleno"
            data-label="Pleno"
          >
            Pleno - 1 número (35:1)
          </button>
          <button class="bet-type-btn" data-type="caballo" data-label="Caballo">
            Caballo - 2 números (17:1)
          </button>
          <button class="bet-type-btn" data-type="transversal" data-label="Transversal">
            Transversal - 3 números (11:1)
          </button>
          <button class="bet-type-btn" data-type="cuadro" data-label="Cuadro">
            Cuadro - 4 números (8:1)
          </button>
          <button class="bet-type-btn" data-type="seisena" data-label="Seisena">
            Seisena - 6 números (5:1)
          </button>
          <button class="bet-type-btn" data-type="docena" data-label="Docena">
            Docena - 12 números (2:1)
          </button>
          <button class="bet-type-btn" data-type="columna" data-label="Columna">
            Columna - 12 números (2:1)
          </button>
          <button class="bet-type-btn" data-type="dos-docenas" data-label="Dos Docenas">
            Dos Docenas - 24 números (0.5:1)
          </button>
          <button class="bet-type-btn" data-type="dos-columnas" data-label="Dos Columnas">
            Dos Columnas - 24 números (0.5:1)
          </button>
          <button class="bet-type-btn" data-type="rojo" data-label="Rojo">
            Rojo - 18 números (1:1)
          </button>
          <button class="bet-type-btn" data-type="negro" data-label="Negro">
            Negro - 18 números (1:1)
          </button>
          <button class="bet-type-btn" data-type="par" data-label="Par">
            Par - 18 números (1:1)
          </button>
          <button class="bet-type-btn" data-type="impar" data-label="Impar">
            Impar - 18 números (1:1)
          </button>
          <button class="bet-type-btn" data-type="falta" data-label="Falta">
            Falta (1-18) - 18 números (1:1)
          </button>
          <button class="bet-type-btn" data-type="pasa" data-label="Pasa">
            Pasa (19-36) - 18 números (1:1)
          </button>
        </div>

        <div id="numero-input" class="numero-selector">
          <label>Seleccionar Número (0-36)</label>
          <input
            type="number"
            id="numero-apuesta"
            min="0"
            max="36"
            value="0"
          />
        </div>

        <div id="caballo-input" class="numero-selector" style="display: none;">
          <label>Seleccionar 2 Números Contiguos</label>
          <input type="text" id="caballo-apuesta" placeholder="Ej: 1,2 o 5,8" />
          <small style="color: #999;">Ingresa dos números contiguos separados por coma</small>
        </div>

        <div id="transversal-input" class="numero-selector" style="display: none;">
          <label>Seleccionar Transversal</label>
          <select id="transversal-apuesta">
            <option value="0-1-2">0, 1, 2</option>
            <option value="0-2-3">0, 2, 3</option>
            <option value="1-2-3">1, 2, 3</option>
            <option value="4-5-6">4, 5, 6</option>
            <option value="7-8-9">7, 8, 9</option>
            <option value="10-11-12">10, 11, 12</option>
            <option value="13-14-15">13, 14, 15</option>
            <option value="16-17-18">16, 17, 18</option>
            <option value="19-20-21">19, 20, 21</option>
            <option value="22-23-24">22, 23, 24</option>
            <option value="25-26-27">25, 26, 27</option>
            <option value="28-29-30">28, 29, 30</option>
            <option value="31-32-33">31, 32, 33</option>
            <option value="34-35-36">34, 35, 36</option>
          </select>
        </div>

        <div id="cuadro-input" class="numero-selector" style="display: none;">
          <label>Seleccionar 4 Números (Cuadro)</label>
          <input type="text" id="cuadro-apuesta" placeholder="Ej: 1,2,4,5" />
          <small style="color: #999;">Ingresa 4 números que formen un cuadrado, separados por coma</small>
        </div>

        <div id="seisena-input" class="numero-selector" style="display: none;">
          <label>Seleccionar Seisena (2 filas contiguas)</label>
          <select id="seisena-apuesta">
            <option value="1-6">1, 2, 3, 4, 5, 6</option>
            <option value="4-9">4, 5, 6, 7, 8, 9</option>
            <option value="7-12">7, 8, 9, 10, 11, 12</option>
            <option value="10-15">10, 11, 12, 13, 14, 15</option>
            <option value="13-18">13, 14, 15, 16, 17, 18</option>
            <option value="16-21">16, 17, 18, 19, 20, 21</option>
            <option value="19-24">19, 20, 21, 22, 23, 24</option>
            <option value="22-27">22, 23, 24, 25, 26, 27</option>
            <option value="25-30">25, 26, 27, 28, 29, 30</option>
            <option value="28-33">28, 29, 30, 31, 32, 33</option>
            <option value="31-36">31, 32, 33, 34, 35, 36</option>
          </select>
        </div>

        <div id="docena-input" class="numero-selector" style="display: none;">
          <label>Seleccionar Docena</label>
          <select id="docena-apuesta">
            <option value="1">Primera Docena (1-12)</option>
            <option value="2">Segunda Docena (13-24)</option>
            <option value="3">Tercera Docena (25-36)</option>
          </select>
        </div>

        <div id="columna-input" class="numero-selector" style="display: none;">
          <label>Seleccionar Columna</label>
          <select id="columna-apuesta">
            <option value="1">Primera Columna (1,4,7,10...)</option>
            <option value="2">Segunda Columna (2,5,8,11...)</option>
            <option value="3">Tercera Columna (3,6,9,12...)</option>
          </select>
        </div>

        <div id="dos-docenas-input" class="numero-selector" style="display: none;">
          <label>Seleccionar Dos Docenas Contiguas</label>
          <select id="dos-docenas-apuesta">
            <option value="1-2">Primera y Segunda (1-24)</option>
            <option value="2-3">Segunda y Tercera (13-36)</option>
          </select>
        </div>

        <div id="dos-columnas-input" class="numero-selector" style="display: none;">
          <label>Seleccionar Dos Columnas Contiguas</label>
          <select id="dos-columnas-apuesta">
            <option value="1-2">Columna 1 y 2</option>
            <option value="2-3">Columna 2 y 3</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Contenedor Principal del Juego -->
    <div class="game-main-container">
      <div class="roulette-wrap">
        <div class="pointer" aria-hidden="true"></div>
        <div
          id="wheel"
          class="wheel"
          role="img"
          aria-label="Ruleta europea"
        >
          <img src="/images/ruleta.png" class="wheel-overlay" alt="Ruleta overlay" />
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Pasar datos del servidor al script
  window.ultimosNumerosData = {{{ultimosNumeros}}};
  window.ultimasApuestasData = {{{ultimasApuestas}}};
</script>

<script src="/js/ruleta.js"></script>