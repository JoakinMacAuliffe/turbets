<div class="game-page-container">
  <!-- Sidebar de Estadísticas -->
  <div class="game-sidebar">
    <div class="stat-card">
      <h3 class="stat-title">Estado de Juego</h3>
      <div class="stat-status active">Recibiendo Apuestas</div>
    </div>

    <div class="stat-card">
      <h3 class="stat-title">Últimos 5 Números</h3>
      <ul class="stat-list">
        <li class="stat-item red">27 <span class="color-label">Rojo</span></li>
        <li class="stat-item black">11 <span class="color-label">Negro</span></li>
        <li class="stat-item red">12 <span class="color-label">Rojo</span></li>
        <li class="stat-item red">1 <span class="color-label">Rojo</span></li>
        <li class="stat-item black">24 <span class="color-label">Negro</span></li>
      </ul>
    </div>

    <div class="stat-card">
      <h3 class="stat-title">Últimas 5 Apuestas</h3>
      <ul class="stat-list">
        <li class="bet-item loss">Rojo - $100.000 <span class="bet-result">Derrota</span></li>
        <li class="bet-item loss">Docena - $500.000 <span class="bet-result">Derrota</span></li>
        <li class="bet-item loss">Columna - $20.000 <span class="bet-result">Derrota</span></li>
        <li class="bet-item win">Cuadro - $100.000 <span class="bet-result">Victoria</span></li>
        <li class="bet-item win">Negro - $10.000 <span class="bet-result">Victoria</span></li>
      </ul>
    </div>
  </div>

  <!-- Contenedor Principal del Juego -->
  <div class="game-main-container">
    <div class="game-header-controls">
      <div class="game-info-badge">
        <span class="badge-label">Saldo</span>
        <span class="badge-value">${{saldo}}</span>
      </div>
      <div class="game-info-badge bet-total">
        <span class="badge-label">Apuesta Total</span>
        <span class="badge-value">$0</span>
      </div>
      <button class="spin-button">Girar Ruleta</button>
    </div>

    <div class="game-board-wrapper">
      <img src="/images/board.jpg" class="game-board-img" alt="Tablero de Ruleta" />
    </div>
  </div>
</div>